---
export interface Props {
	title: string;
}
const { title } = Astro.props as Props;
import Nav from '../components/Nav.astro';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="stylesheet" href="./styles/reset.css">
		<link rel="stylesheet" href="https://use.typekit.net/tur3dlz.css">
		<script src="https://kit.fontawesome.com/a54906dcfe.js" crossorigin="anonymous"></script>
	</head>
	<body class="text-slate-800 mx-auto container max-w-3xl">
		<Nav />
		<slot />
		<footer class="text-center my-6 text-sm">Copyright Â© 2022 - Sam Hankins</footer>
	</body>
</html>
